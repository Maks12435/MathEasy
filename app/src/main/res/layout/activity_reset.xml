<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="351dp"
        android:contentDescription="@string/close"
        android:onClick="BackToProfile"
        android:padding="10dp"
        android:src="@drawable/icons8_back_50"
        android:background="@android:color/transparent"
        tools:ignore="TouchTargetSizeCheck"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/newpsswd"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/backgrounds"
        android:hint="Жаңа құпия сөзді енгізіңіз"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/newpsswdrepeat"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/backgrounds"
        android:hint="Жаңа құпия сөзіңізді қайта енгізіңіз"
        android:textAlignment="center" />

    <Button
        android:id="@+id/reset"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/regbutton"
        android:onClick="register"
        android:text="Қалпына келтіру" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:text="MathEasy"
        android:textColor="@color/white"
        android:textSize="40dp" />

</RelativeLayout>